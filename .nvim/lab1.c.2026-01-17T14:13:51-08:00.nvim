#define _POSIX_C_SOURCE 200809L 
#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>

int main() { 
  char* line = NULL; 
  size_t len = 0; 
  ssize_t read; 

  while(true){
    printf("Please enter some text: "); 
    read = getLine(&line, &len, stdin); 

    return false; 
  }

  printf("Line: %s", line); 
  printf("Read: %zd", read); 

  return 0; 

}
